using System;
using System.Net.Sockets;
using System.Text;

class Program
{
    public static void Main_Encoding()
    {
        Console.OutputEncoding = Encoding.UTF8;
    }

    static void Main(string[] args)
    {
        Main_Encoding();

        // Підключаємося до сервера на порту 12345
        TcpClient client = new TcpClient();
        client.Connect("localhost", 12345);
        Console.WriteLine("Connected to TCP server.");

        Console.Write("Enter message: ");
        string message = Console.ReadLine();

        // Відправляємо повідомлення до сервера
        byte[] messageBytes = Encoding.UTF8.GetBytes(message);
        client.GetStream().Write(messageBytes, 0, messageBytes.Length);

        // Отримуємо відповідь від сервера
        byte[] buffer = new byte[1024];
        int bytesRead = client.GetStream().Read(buffer, 0, buffer.Length);
        string response = Encoding.UTF8.GetString(buffer, 0, bytesRead);
        Console.WriteLine("Received response from server: {0}", response);

        // Закриваємо з'єднання
        client.Close();
        Console.WriteLine("Client closed.");
    }
}
