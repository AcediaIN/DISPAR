using System;
using System.Windows.Forms;

class Program
{
    static void Main()
    {
        // Виводимо MessageBox з повідомленням
        MessageBox.Show("Привіт світ!");

        // Виводимо MessageBox зі списком кнопок та вибором користувача
        DialogResult result = MessageBox.Show("Чи подобається тобі програмування на C#?",
            "Запитання", MessageBoxButtons.YesNoCancel, MessageBoxIcon.Question);

        // Виводимо повідомлення залежно від вибору користувача
        if (result == DialogResult.Yes)
        {
            MessageBox.Show("Файно!");
        }
        else if (result == DialogResult.No)
        {
            MessageBox.Show("Шкода, що тобі не подобається");
        }
        else if (result == DialogResult.Cancel)
        {
            MessageBox.Show("Окей, сподіваюсь, що наступного разу тобі сподобається!");
        }

        // Використовування класу MessageBox для виводу повідомлення з інформацією, у разі необхідності
        /*      
        string message = "Це повідомлення містить корисну інформацію.";
        string caption = "Інформаційне повідомлення";
        MessageBoxButtons buttons = MessageBoxButtons.OK;
        MessageBoxIcon icon = MessageBoxIcon.Information;
        MessageBox.Show(message, caption, buttons, icon);
        */

        // Використовування класу MessageBox для виводу повідомлення з помилкою, у разі необхідності
        /*
                message = "Під час роботи програми виникла помилка.";
                caption = "Помилка";
                buttons = MessageBoxButtons.OK;
                icon = MessageBoxIcon.Error;
                MessageBox.Show(message, caption, buttons, icon);
        */
    }
}
